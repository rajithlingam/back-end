{
  "name": "vainglory-hero-names",
  "version": "1.5.0",
  "description": "Get random vainglory hero name",
  "main": "dist/index.js",
  "scripts": {
    "commit": "git-cz",
    "check-coverage": "nyc check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "watch:test": "npm t -- -w",
    "test": "mocha src/index.test.js --compilers js:babel-register",
    "cover": "nyc npm t",
    "prebuild": "rimraf dist",
    "build": "npm-run-all --parallel build:*",
    "build:main": "babel --copy-files --out-dir dist --ignore *.test.js src ",
    "build:umd": "webpack --output-filename index.umd.js",
    "build:umd.min": "webpack --output-filename index.umd.min.js -p",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/leocabeza/vainglory-names.git"
  },
  "keywords": [
    "random",
    "vainglory"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "author": "Leonardo Cabeza <info@leonardocabeza.com> (https://github.com/leocabeza)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/leocabeza/vainglory-names/issues"
  },
  "homepage": "https://github.com/leocabeza/vainglory-names#readme",
  "dependencies": {
    "unique-random-array": "1.0.0"
  },
  "devDependencies": {
    "babel-cli": "6.10.1",
    "babel-loader": "6.2.4",
    "babel-preset-es2015": "6.9.0",
    "babel-preset-stage-2": "6.5.0",
    "babel-register": "6.9.0",
    "chai": "3.5.0",
    "codecov.io": "0.1.6",
    "commitizen": "2.8.2",
    "cz-conventional-changelog": "1.1.6",
    "eslint": "2.13.1",
    "ghooks": "1.2.4",
    "json-loader": "0.5.4",
    "mocha": "2.5.3",
    "npm-run-all": "2.2.2",
    "nyc": "6.6.1",
    "rimraf": "2.5.2",
    "semantic-release": "^4.3.5",
    "webpack": "1.13.1"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run cover && npm run check-coverage"
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ]
  }
}